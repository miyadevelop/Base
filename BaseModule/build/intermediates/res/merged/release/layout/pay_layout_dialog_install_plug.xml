<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:background="@color/module_1"
     android:orientation="vertical">
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        style="@style/module_1_text_2_4"
        android:gravity="center"
        android:text="@string/pay_install_dialog_title"
        />
    <View
        android:id="@+id/dialog_sepeator_line"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/module_1_line"
        />
    <TextView
        android:id="@+id/dialog_messege"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        style="@style/module_1_text_2_3"
     
        />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="18dp"
        android:paddingBottom="20dp"
        android:paddingRight="18dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/layout_sure"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            style="@style/button_1_2"
         
            />
        
        <Button
            android:id="@+id/layout_cancle"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            style="@style/button_2_2"
            />
    </LinearLayout>
</LinearLayout>