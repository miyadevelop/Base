<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:base="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.lf.view.tools.MyImageButton
        android:id="@+id/tab_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerHorizontal="true"
        base:my_color="@color/tab_text_1" />

    <TextView
        android:id="@+id/tab_text"
        style="@style/main_text_1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:lineSpacingExtra="0dp"
        android:textColor="@color/tab_text_1"
        android:textSize="12dp" />

</RelativeLayout>