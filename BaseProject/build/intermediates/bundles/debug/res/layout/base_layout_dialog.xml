<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:padding="@dimen/view_padding_2">

    <TextView
        android:id="@+id/base_dialog_text_title"
        style="@style/background_text_2_4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/base_dialog_text_title"
        android:background="@color/module_1_line" />

    <TextView
        android:id="@+id/base_dialog_text_message"
        style="@style/background_text_1_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/base_dialog_text_title"
        android:layout_margin="@dimen/view_padding_4" />

    <Button
        android:id="@+id/base_dialog_text_button"
        style="@style/button_1_2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/base_dialog_text_message"
        android:layout_marginLeft="@dimen/view_padding_2"
        android:layout_marginRight="@dimen/view_padding_2" />

</RelativeLayout>