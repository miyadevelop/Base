<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/base_share_layout_main"
    android:background="@color/module_1" >

    <LinearLayout
        android:id="@+id/base_share_layout_channnel"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/module_2"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/base_share_imagebutton_wechat"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/button_share_icon_wechat_enable" />

            <TextView
                style="@style/module_1_text_1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/base_share_imagebutton_wechat"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/base_share_channel_wechat" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/base_share_imagebutton_circle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/button_share_icon_wxcircle_enable" />

            <TextView
                style="@style/module_1_text_1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/base_share_imagebutton_circle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/base_share_channel_circle" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/base_share_imagebutton_qq"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/button_share_icon_qq_enable" />

            <TextView
                style="@style/module_1_text_1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/base_share_imagebutton_qq"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/base_share_channel_qq" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/base_share_imagebutton_qzone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/button_share_icon_qzone_enable" />

            <TextView
                style="@style/module_1_text_1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/base_share_imagebutton_qzone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/base_share_channel_qzone" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>