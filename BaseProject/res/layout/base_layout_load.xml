<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <ProgressBar
        android:id="@+id/load_progress_loading"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/load_text_load_failed"
        style="@style/module_1_text_3_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/load_failed" />


    <TextView
        style="@style/module_1_text_3_1"
        android:id="@+id/load_text_load_over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/load_over" />

    <TextView
        style="@style/module_1_text_3_1"
        android:id="@+id/load_text_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/load_no_data" />

</LinearLayout>